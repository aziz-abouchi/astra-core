
module std.examples.factorial

factorial : Nat -> Nat
factorial 0 = 1
factorial n = n * factorial (n - 1)

factorial_tail : Nat -> Nat
fn factorial_tail n =
  let rec loop n acc =
    if n == 0 then acc
    else loop (n - 1) (acc * n)
  in loop n 1

readNat   : IO Nat
printNat  : Nat -> IO Unit

main : IO Unit
fn main =
  let n = readNat in
  let r = factorial_tail n in
  printNat r
