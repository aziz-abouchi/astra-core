{
  "Signature": {
    "prefix": "sig",
    "body": [
      "$1 : $2",
      "$1 $3 = $0"
    ]
  },
  "Data ADT": {
    "prefix": "data",
    "body": [
      "data ${1:Type} ${2:a} = ${3:Con1} ${4:a} | ${5:Con2} ${6:a}"
    ]
  },
  "Case": {
    "prefix": "case",
    "body": [
      "case ${1:expr} of",
      "  ${2:Pat1} -> ${3:expr}",
      "  ${4:Pat2} -> ${5:expr}"
    ]
  },
  "Record": {
    "prefix": "record",
    "body": [
      "{ ${1:x}: ${2:I64}; ${3:y}: ${4:I64} }"
    ]
  },
  "Try/Catch": {
    "prefix": "tryc",
    "body": [
      "${1:name} : ${2:Error} ! ${3:T}",
      "${1:name} = try ${4:expr} catch ${5:0}"
    ]
  }
}