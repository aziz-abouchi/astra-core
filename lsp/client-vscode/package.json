
{
  "name": "heaven-vscode",
  "displayName": "Heaven Language",
  "version": "0.0.1",
  "publisher": "aziz-abouchi",
  "engines": { "vscode": "^1.90.0" },
  "activationEvents": ["onLanguage:heaven"],
  "contributes": {
    "languages": [{ "id": "heaven", "extensions": [".heaven"], "aliases": ["Heaven"] }],
    "configuration": {
      "properties": {
        "heaven.maxProblems": { "type": "number", "default": 100 }
      }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -b",
    "package": "vsce package"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "vsce": "^3.0.0",
    "vscode-languageclient": "^9.0.0"
  }
}

